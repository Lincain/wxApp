/* pages/list/list.wxss */
.weekWeather-tip{
  font-size: 60rpx;
  line-height: 149rpx;
  height: 149rpx;
  text-align: center;
  margin: 0 40rpx;
  opacity: 0.8;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.4)
}

.oneWeather{
  display: flex;
  margin: 0 40rpx;
  height: 140rpx;
  align-items: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.4)
}

.todayTime{
  opacity: 0.8;
  font-size: 40rpx;
  line-height: 56rpx
}

.dateTime{
  opacity: 0.5;
  font-size: 25rpx;
  line-height: 35rpx;
}

.tempScope{
  flex-grow: 1;
  text-align: center;
  opacity: 0.8;
  font-size: 40rpx;
  line-height: 56rpx;
}
.weatherIcon{
  width: 90rpx;
  height: 90rpx;
}